{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "src/mail/templates/*.hbs",
        "input": "src/mail/templates",
        "output": "../dist/src/mail/templates"
      }
    ],
    "deleteOutDir": true
  }
}
